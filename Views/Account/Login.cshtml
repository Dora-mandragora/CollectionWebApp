
@model CollectionWebApp.ViewModels.LoginModel

 <form asp-action = "Login" asp-controller = "Account" asp-antiforgery = "true">
     <div class = "validation" asp-validation-summary = "ModelOnly"></div>
<div class="table table-bordered">
        <div class="row">
            <div class="col-12"><h3>Добро пожаловать!</h3></div>  
        </div>      
        <div class="row">
            <div class="col-12"><h6>Логин:</h6>
            <input class = "form-control col-centered col-8" type = "text" asp-for = "Login" />
            </div>
        </div>
        <div class="row">
            <div class="col-12"><h6>Пароль:</h6>        
            <input class = "form-control col-centered col-8" type = "password" asp-for = "Password" />
            </div>
        </div>
        </form>
        <div class="row">             
                 <div class = "col-12">
                    <button class="btn btn-outline-dark">Войти</button> </div>  
                    <div class = "col-12">
                    <form asp-action = "Register" asp-controller = "Account" method = "get">
                        <button class="btn btn-outline-dark" >Зарегистрироваться</button>
                    </form>
                
                    </div>
            
        </div>         
</div> 
    